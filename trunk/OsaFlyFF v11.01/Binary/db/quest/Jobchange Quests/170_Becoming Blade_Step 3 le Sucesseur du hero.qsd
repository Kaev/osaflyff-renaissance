g_szQuestName = "Etape 3 - Le successeur"
g_dwQuestID = 170
g_szNPCName = "MaFl_Guabrill"
g_szNPCNameEnd = "MaFl_Ata"
g_dwChgPenya = 100000
g_dwReqMinLVL = 60
g_dwReqMaxLVL = 60
g_szReqJobs = {"MERCENARY"}
--------------------------------------------------------------------------------------------------------------------
-------------------------------------------- Do not change from here on ----------------------------------------
