g_szQuestName = "Etape 1 - L'épreuve de la force"
g_dwQuestID = 163
g_szNPCName = "MaDa_Karanduru"
g_dwChgPenya = 100000
g_dwReqMinLVL = 60
g_dwReqMaxLVL = 60
g_szReqJobs = {"MERCENARY"}
--------------------------------------------------------------------------------------------------------------------
-------------------------------------------- Do not change from here on ----------------------------------------
