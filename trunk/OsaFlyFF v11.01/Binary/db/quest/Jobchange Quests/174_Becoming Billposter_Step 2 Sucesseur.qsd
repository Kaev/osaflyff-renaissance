AddState(g_dwQuestID,1,-1)
SetEndNPC(g_dwQuestID,1,g_szNPCName)
AddEndNPCTextButton(g_dwQuestID,1,g_szQuestName,g_dwQuestID,1)
AddEndNPCDialog(g_dwQuestID,1,"Félicitations, voici une lettre de recommandation confirmant que tu es sur la voie de devenir Moine.")
AddEndNPCDialog(g_dwQuestID,1,"Il faut que tu l'apportes à Domek, le Sage des Moines qui se trouve à la Fontaine des Défunts de Flaris. Mais avant cela, j'aimerai que tu retrouves le Document du Hall de Roentel…")
AddEndNPCDialog(g_dwQuestID,1,"C'est une relique du Héros qui a été dérobé par Hoiren à la mort de Roentel. J'ai entendu dire que Hoiren errait dans le Jardin de Rhisis, dans la région des Tombstones.")
AddEndNPCDialog(g_dwQuestID,1,"Que la maîtrise de Roentel t'accompagne dans ta quête !")
AddEndNPCAnswerButton(g_dwQuestID,1,"BTN_ADD_QUEST","__OK__",g_dwQuestID,2);

-- Si onreparle a Domek avant
AddState(g_dwQuestID,2,0)
SetStartNPC(g_dwQuestID,2,g_szNPCNameEnd)
AddStartNPCTextButton(g_dwQuestID,2,g_szQuestName,g_dwQuestID,2)
AddStartNPCDialog(g_dwQuestID,2,"Retrouver le Document du Hall de Roentel qui se trouve quelque part au Jardin de Rhisis, dans la région des Tombstones, puis le rapporter au Sage des Moines Domek à la Fontaine des Défunts de Flaris.")


--Si on parle à Domek apres
SetEndNPC(g_dwQuestID,2,g_szNPCNameEnd)
AddEndNPCTextButton(g_dwQuestID,2,g_szQuestName,g_dwQuestID,2)
AddEndRequiredMonsterKill(g_dwQuestID,2,843,1)
