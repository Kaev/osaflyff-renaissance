AddEndNPCTextButton(g_dwQuestID,2,g_szQuestName,g_dwQuestID,2)
AddEndRequiredItem(g_dwQuestID,2,10392,1)--il faut la lettre
AddEndNPCDialog(g_dwQuestID,2,"Oh! C'est la lettre! Ha ha ha. Merci! Actuellement, je suis un employé de la famille Hynan. Je veille au bien être de la famille Hynan.")
AddEndNPCDialog(g_dwQuestID,2,"Celà fait longtemps que nous recherchions cette lettre. Heureusement que vous êtes là! J'aimerais vous récompenser.")
AddEndNPCDialog(g_dwQuestID,2,"Tenez. Prenez en soin car c'est très précieux")
AddEndNPCAnswerButton(g_dwQuestID,2,"BTN_FINISH_QUEST","__OK__",g_dwQuestID,3)

--On va parler à guabrille
AddState(g_dwQuestID,3,14)
